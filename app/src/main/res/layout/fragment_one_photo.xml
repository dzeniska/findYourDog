<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:id="@+id/onePhotoFragment"

    android:background="@drawable/background_img_one"
    tools:context=".ui.fragments.DogsListFragment">


    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/imgOnePhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBarLine"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="0dp"
        android:layout_height="335dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:progressDrawable="@android:drawable/progress_horizontal"
        android:textAlignment="gravity"
        android:textDirection="firstStrongRtl"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imgOnePhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgOnePhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>